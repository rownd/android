{
    "npm": false,
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      },
      "@release-it/bumper": {
        "in": "VERSION",
        "out": [
            "android/versioning.gradle",
            "README.md",
            "VERSION"
        ]
      }
    },
    "hooks": {
        "after:bump": "./gradlew build && ./gradlew :android:publishReleasePublicationToSonatypeRepository"
    }
  }
